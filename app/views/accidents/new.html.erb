<div class="container pt-3 scrollable">
  <%= turbo_frame_tag "accident" do %>
    <div class="bg-secondary mt-3 mb-4 d-flex w-100 justify-content-between align-items-center" style="height:5px">
      <div class="btn-green rounded-circle text-center" style="height: 50px; width: 50px; line-height: 50px">
        <p class="align-middle text-white">1</p>
      </div>
      <div class="bg-dark rounded-circle text-center" style="height: 50px; width: 50px; line-height: 50px">
        <p class="text-secondary">2</p>
      </div>
      <div class="bg-dark rounded-circle text-center" style="height: 50px; width: 50px; line-height: 50px">
        <p class="text-secondary">3</p>
      </div>
    </div>
    <div class="bg-dark rounded-circle text-center" style="height: 50px; width: 50px; line-height: 50px">
      <p class="text-secondary">2</p>
    </div>
    <div class="bg-dark rounded-circle text-center" style="height: 50px; width: 50px; line-height: 50px">
      <p class="text-secondary">3</p>
    </div>
  </div>
  <div class="pt-2">
    <%= simple_form_for @accident do |f| %>
    <%= f.input :date, label: 'Date of Accident', as: :string, type: :text %>
    <%= f.input :time, label: 'Time of Accident', as: :time, minute_step: 5 %>
    <%= f.input :description, label: 'What happened?', input_html: { rows: 10, onfocus: " let value = this.value; this.value = null; this.value=value" }, as: :text %>
    <%= f.submit 'Next', class: 'btn btn-primary btn-block' %>
    <% end %>
    <% end %>
  </div>
  <div class="modal fade" id="accidentModal" tabindex="-1" aria-labelledby="accidentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="accidentModalLabel">Quick input</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body  mx-auto">
          <button type="button" class="btn btn-primary my-1 w-100 accident-type" data-toggle="modal" data-target="#accidentModal">
            Fell Down
          </button><br>
          <button type="button" class="btn btn-primary my-1 w-100 accident-type" data-toggle="modal" data-target="#accidentModal">
            Hit by object
          </button><br>
          <button type="button" class="btn btn-primary my-1 w-100 accident-type" data-toggle="modal" data-target="#accidentModal">
            Crushed by machine
          </button><br>
          <button type="button" class="btn btn-primary my-1 w-100 accident-type" data-toggle="modal" data-target="#accidentModal">
            Burned
          </button><br>
          <button type="button" class="btn btn-primary my-1 w-100 accident-type" data-toggle="modal" data-target="#accidentModal">
            Electrocuted
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
