<div class="container ">
  <div class="d-flex">
    <div class="badge-parent my-3">
      <div class="square-date">
        <h5><%= (Date::MONTHNAMES[Date.today.mon]).capitalize %></h5>
        <h1><%= Date.today.day %></h1>
      </div>
      <% if @workday_checkedin.nil? %>
        <span class="badge badge-danger badge-home">!</span>
      <% end %>
    </div>
      <div class="d-flex align-items-center justify-content-center flex-grow-1 my-3">
        <div class="text-center mx-3">
          <% if @workday_checkedin.nil? %>
            <h5>Good evening, <%= current_user.name %>!<br>Please check in! 👇</h5>
          <% else %>
            <strong>
              <p class="checkin-success">
                <% if @workday_checkedin.on_mc %>
                  Get well soon 🙏
                <% elsif @workday_checkedin.on_rest %>
                  Enjoy your rest day 🤗
                <% else %>
                  You've checked in today! 👍
                <% end %>
              </p>
              <i class="fas fa-info-circle text-primary"></i>
              <%= link_to organisation_path(anchor: "article#{@article.first.id}"), data: { turbo: false }, class: 'text-primary' do %>
                <%= @article.first.title %>
              <% end %>
            </strong>
          <% end %>
        </div>
      </div>
    </div>
    <% if @workday_checkedin.nil? %>
      <%= link_to 'Check in today', new_workday_path, class: "btn btn-block btn-warning text-white mb-3", style:"box-shadow: 0 0 15px rgba(0,0,0,0.2);
  ", data: { turbo: 'false' } %>
    <% end %>
  </div>

  <div id="carouselHome" class="carousel slide mb-3" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselHome" data-slide-to="0" class="active"></li>
      <li data-target="#carouselHome" data-slide-to="1"></li>
      <li data-target="#carouselHome" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <a href="https://www.sgmigrant.com" target="_blank">
          <%= image_tag "case.png" %>
         <div class="carousel-caption">
          <p>One stop portal for COVID-19, mental wellness and recreation</p>
        </div>
      </a>
    </div>
    <div class="carousel-item">
     <a href="https://www.youtube.com/watch?v=W9NqBtOaeUs" target="_blank">
      <%= image_tag "Bengali-image.png" %>
      <div class="carousel-caption">
        <p>Learn about policy changes during COVID-19 (Bengali only)</p>
      </div>
    </a>
  </div>
     <div class="carousel-item">
      <a href="https://www.globalmigrantfestival.com/sgmigrantpoetry" target="_blank">
        <%= image_tag "migrant-worker-poetry.png" %>
      </a>
    </div>
</div>
<a class="carousel-control-prev" href="#carouselHome" role="button" data-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselHome" role="button" data-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
</div>
</div>
<div class="bg-primary py-4 mb-5">
  <div class="container">
    <%= link_to new_workday_path do %>
      <div class="card-product-home my-3 p-3 rounded">
        <%= image_tag "card-forgot-lg.png", height: 100, width: 100, crop: :fill %>
        <div class="card-product-infos">
          <h2>Forgot to check in?</h2>
          <div class="card-line"></div>
          <p>Log your hours for a missed day so that your boss cannot underpay you. &rarr; </p>
        </div>
      </div>
    <% end %>

    <%= link_to new_accident_path do %>
      <div class="card-product-home my-3 p-3 rounded">
        <%= image_tag "card-accident-lg.png", height: 100, width: 100, crop: :fill %>
        <div class="card-product-infos">
          <h2>Accident at work?</h2>
          <div class="card-line"></div>
          <p>Let us automate the medical reporting process and keep your paperwork organised. &rarr;</p>
        </div>
      </div>
    <% end %>

    <%= link_to new_payslip_path do %>
      <div class="card-product-home my-3 p-3 rounded">
        <%= image_tag "card-paid-lg.png", height: 100, width: 100, crop: :fill %>
        <div class="card-product-infos">
          <h2>Got paid?</h2>
          <div class="card-line"></div>
          <p>Log your salary so that we can check that you are being paid fairly and on time. &rarr;</p>
        </div>
      </div>
    <% end %>
    <br>
    <% if user_signed_in? %>
      <%= button_to "More options >", destroy_user_session_path, method: :delete, class: "btn btn-block btn-outline-primary text-white small-link", data: { turbo: false }  %>
    <% end %>
  </div>
</div>

