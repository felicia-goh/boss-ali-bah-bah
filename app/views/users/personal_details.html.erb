<%= turbo_frame_tag 'edit-profile' do %>
  <div class="container">
    <div class="progress-steps-bar">
      <div class="progress-steps-circle active"><p>1</p></div>
      <div class="progress-steps-circle active"><p>2</p></div>
      <div class="progress-steps-circle active"><p>3</p></div>
    </div>
    <br><br>
    <h2 class ="text-center text-blue">Personal details</h2>
    <%= simple_form_for current_user, url: 'personal_update', data: { turbo_frame: '_top' } do |f| %>
      <%= f.input :name, required: true, autofocus: true %>
      <%= f.input :basic_salary,
                  required: true,
                  label: 'Basic Monthly Salary (in SGD)',
                  hint: "For calculating pay for overtime and work on rest day. Important in salary claims." %>
      <%= f.button :submit, class: 'btn btn-primary btn-block text-white', value: 'Submit' %>
    <% end %>
    <%= link_to 'Back', :back, class: 'btn btn-outline-primary btn-block my-3' %>
  </div>
<% end %>
