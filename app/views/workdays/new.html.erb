<div class="container my-3" id='workday-form-dates' data-completed-dates='<%= @workdays_dates.to_json %>'>
  <%= turbo_frame_tag 'workday_form' do %>
    <%= simple_form_for(@workday, data: { turbo_frame: '_top' }) do |f| %>
      <%= f.input :date, as: :string, type: :text %>
      <%= f.input :check_in_time, label: 'I am starting work at', minute_step: 5, default: @default_check_in  %>
      <%= f.input :check_out_time, label: 'I will end work at', minute_step: 5, default: @default_check_out %>
      <%= f.button :submit, 'Log my work hours', class: 'btn btn-primary' %>
    <% end %>
    <br>
    <a href="/workdays/on_leave" class="btn btn-warning">I am not working today</a>
  <% end %>
</div>

